{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "strict": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    //"noUnusedLocals": true, // Enable later development
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "ts-node": { "files": true },
  "include": ["src/**/*"]
}
